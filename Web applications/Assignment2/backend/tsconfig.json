{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
    },
    "lib": ["es6", "dom"],
    "include": ["src/ts/**/*"],
    "exclude": [
        "**/*.spec.ts"
    ]
}
